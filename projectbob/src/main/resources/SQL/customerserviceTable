CREATE TABLE customerService (
	cs_no	int AUTO_INCREMENT	primary key,
	type	varchar(50)	NOT NULL,
	title	varchar(50)	NOT NULL,
	content	varchar(225)	NOT NULL,
	reg_date	timestamp	NOT NULL
);



---------------------------------------------------------------------


select * from client where id = "admin";
-- client 테이블에 admin이 없다면 insert 실행

insert into client (id, pass, name, nickname, birthday, address1, address2, email, phone, point, division, reg_date, modi_date)
values( 'admin', '1234', '관리자', '관리자', '20250101', '서울 관악구 관악로 1 (신림동)', '1층', 'admin@naver.com', '010-0101-1234', 0 , 'master', sysdate(), sysdate());
commit;

-- client 테이블에 admin이 있다면 update 실행

update client
set division = 'master'
where id = 'admin';
commit;

