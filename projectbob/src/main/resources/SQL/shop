DROP DATABASE IF EXISTS projectbob;
CREATE DATABASE IF NOT EXISTS projectbob;
use projectbob;

drop table shop;
CREATE TABLE `shop` (
	`s_id`	int(20)	NOT NULL,
	`id`	varchar(20)	NOT NULL,
	`name`	varchar(50)	NOT NULL,
	`phone`	varchar(11)	NOT NULL,
	`address1`	varchar(100)	NOT NULL,
	`address2`	varchar(80)	NOT NULL,
	`owner`	varchar(20)	NOT NULL,
	`s_number`	int(11)	NOT NULL,
	`category`	varchar(50)	NOT NULL,
	`rating`	decimal(2,1)	NULL DEFAULT 0.0,
	`heart`	int(5)	NULL DEFAULT 0,
	`op_time`	varchar(50)	NOT NULL,
	`off_day`	varchar(50)	NULL,
	`min_price`	varchar(50)	NOT NULL,
	`s_license`	varchar(200)	NOT NULL,
	`s_cert`	varchar(200)	NULL,
	`status`	varchar(50)	NOT NULL DEFAULT "정상",
	`info`	varchar(100)	NOT NULL,
	`notice`	varchar(250)	NOT NULL,
	`s_info`	varchar(200)	NOT NULL,
	`reg_date`	timestamp	NOT NULL,
	`modi_date`	timestamp	NOT NULL
);
select * from shop;