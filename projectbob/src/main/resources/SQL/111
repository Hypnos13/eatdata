CREATE TABLE IF NOT EXISTS cart (
    ca_id INT AUTO_INCREMENT PRIMARY KEY,             -- 카트 ID (각 카트 항목을 고유하게 식별)
    ca_pid INT NULL,                                  -- 부모 카트 ID (같은 테이블 내의 다른 ca_id를 참조, 그룹화에 사용될 수 있음)
    m_id INT NOT NULL,                                -- 메뉴 ID
    mo_id INT NULL,                                   -- 메뉴 옵션 ID (NULL 허용)
    id VARCHAR(20) NULL,                              -- 회원 ID (비회원 가능)
    guest_id VARCHAR(50) NULL,                        -- 비회원 ID
    s_id INT NOT NULL,                                -- 가게 ID
    quantity INT NOT NULL,                            -- 수량
    reg_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP,     -- 등록일
    modi_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP
        ON UPDATE CURRENT_TIMESTAMP,                  -- 수정일
    status VARCHAR(50) NOT NULL DEFAULT '일반',       -- 상태 (일반 / 주문완료 등)
    total_price INT NOT NULL,                         -- 총 가격

    -- 외래 키 제약조건
    CONSTRAINT fk_cart_m_id FOREIGN KEY (m_id)
        REFERENCES menu(m_id) ON DELETE CASCADE ON UPDATE CASCADE,

    CONSTRAINT fk_cart_mo_id FOREIGN KEY (mo_id)
        REFERENCES menu_option(mo_id) ON DELETE SET NULL ON UPDATE CASCADE,

    CONSTRAINT fk_cart_id FOREIGN KEY (id)
        REFERENCES client(id) ON DELETE SET NULL ON UPDATE CASCADE,

    CONSTRAINT fk_cart_s_id FOREIGN KEY (s_id)
        REFERENCES shop(s_id) ON DELETE CASCADE ON UPDATE CASCADE,

    -- ca_pid를 ca_id에 대한 외래 키로 추가 (자기 참조)
    CONSTRAINT fk_cart_ca_pid FOREIGN KEY (ca_pid)
        REFERENCES cart(ca_id) ON DELETE CASCADE ON UPDATE CASCADE
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

INSERT INTO cart (m_id, mo_id, guest_id, s_id, quantity, total_price, reg_date)
VALUES
  (13, 19, 'user01', 4, 1, 13000 + 4900, NOW()),  -- 메뉴 13 + mo_id 19 (사이즈업 라지)
  (13, 20, 'user01', 4, 1, 13000 + 3000, NOW()),  -- 메뉴 13 + mo_id 20 (치즈 토핑 추가 80g)
  (15, 25, 'user01', 4, 2, 14500 + 4900, NOW());  -- 메뉴 15 + mo_id 25 (사이즈업 L), 수량 2개

commit;
